<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelTesting" parallel="tests" thread-count="3">
	<test name="Test1">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="testScript.LoginTest">
				<methods>
					<include
						name="verifyUserLoginWithValidUsernameAndValidPassword"></include>
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	<test name="Test2">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="testScript.HomeTest">
				<methods>
					<include
						name="verifyWhetherUserCanLogOutFromHomePageAfterLoginToThePage"></include>
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->